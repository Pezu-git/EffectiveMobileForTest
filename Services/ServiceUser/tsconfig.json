{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES7"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  }
}